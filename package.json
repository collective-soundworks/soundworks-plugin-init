{
  "name": "@soundworks/service-platform",
  "version": "0.0.1-alpha.1",
  "description": "platform service for the soundworks framework",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "license": "BSD-3-Clause",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-service-platform"
  },
  "scripts": {
    "clean": "rm -Rf client && rm -Rf server",
    "deploy": "np --yolo",
    "doc": "jsdoc -c jsdoc.json",
    "version": "npm run clean && npm run transpile && npm run doc && git add docs",
    "transpile:client": "babel src/client --out-dir client",
    "transpile:server": "babel src/server --out-dir server",
    "transpile": "npm run transpile:server && npm run transpile:client",
    "watch:client": "chokidar src/client/ -c \"npm run transpile:client\"",
    "watch:server": "chokidar src/server/ -c \"npm run transpile:server\"",
    "watch": "npm run clean && npm run transpile && concurrently \"npm run watch:client\" \"npm run watch:server\""
  },
  "dependencies": {
    "mobile-detect": "^1.3.7",
    "nosleep.js": "^0.9.0",
    "screenfull": "^4.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "chokidar": "^3.0.1",
    "chokidar-cli": "^1.2.2",
    "concurrently": "^4.1.0"
  }
}
